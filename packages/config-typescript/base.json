{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "strict": true,
    "noImplicitOverride": true,

    "outDir": "dist",
    "sourceMap": true,

    "lib": ["ESNext"]
  },
  "exclude": [
    "node_modules"
  ]
}
