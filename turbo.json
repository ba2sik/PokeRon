{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^prisma:generate",
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        ".env.local"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "^prisma:generate"
      ],
      "cache": false,
      "persistent": true
    },
    "prisma:generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    }
  }
}
